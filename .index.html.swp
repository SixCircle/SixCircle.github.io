---
layout: blog_layout
---

{% for post in site.posts %}
<article class="preview">
    <header>
        <h2 class="post-title">
            <a href="{{ /中断/post.url }}">  {{ /中断/post.title }} </a>
        </h2>
        <p class="post-time"> {{ /中断/post.time }}</p>
    </header>
    <section class="post-section">
        <p>
            {{ /中断/post.excerpt }}
        </p>
        <p class="readmore">
            <a href="{{ /中断/post.url }}">
                阅读全文
                <span class="glyphicon glyphicon-circle-arrow-right"></span>
            </a>
        </p>
    </section>

</article>
{% endfor %}
